{{#ifwith resume.publications}}
	<section>
		{{> section-header name="Publications"}}
		<ul id="publications-list">
			{{#each this}}
				<li>
					<header>
						<div class="flex-between">
							<h3>
								{{#if name}}
									{{name}}
									{{#if url}}
										<a target="_blank" href="{{url}}">
											<span class="fas fa-fw fa-external-link-alt"></span>
										</a>
									{{/if}}
								{{else if url}}
									<a target="_blank" href="{{url}}">{{url}}</a>
								{{/if}}
							</h3>
							<h5>{{releaseDate}}</h5>
						</div>
						{{#if publisher}}
							<h4>{{publisher}}</h4>
						{{/if}}
					</header>
					{{#if summary}}
						<p>{{summary}}</p>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</section>
{{/ifwith}}