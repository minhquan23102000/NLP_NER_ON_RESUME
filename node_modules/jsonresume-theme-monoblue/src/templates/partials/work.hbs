{{#ifwith resume.work}}
	<section>
		{{> section-header name="Work"}}
		<ul id="work-list">
			{{#each this}}
				<li>
					<header>
						<div class="flex-between">
							<h3>
								{{#if name}}
									{{name}}
									{{#if url}}
										<a target="_blank" href="{{url}}">
											<span class="fas fa-fw fa-external-link-alt"></span>
										</a>
									{{/if}}
								{{else if url}}
									<a target="_blank" href="{{url}}">{{url}}</a>
								{{/if}}
							</h3>
							<h5>
								{{startDate}}
								{{#if endDate}}
									<span>- {{endDate}}</span>
								{{else}}
									<span>- Present</span>
								{{/if}}
							</h5>
						</div>
						{{#if position}}
							<h4>{{position}}</h4>
						{{/if}}
					</header>
					{{#if summary}}
						<p>{{summary}}</p>
					{{/if}}
					{{#ifwith highlights}}
						<ul>
							{{#each this}}
								<li>{{.}}</li>
							{{/each}}
						</ul>
					{{/ifwith}}
				</li>
			{{/each}}
		</ul>
	</section>
{{/ifwith}}