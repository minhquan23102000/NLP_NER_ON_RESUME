{{#ifwith resume.awards}}
	<section>
		{{> section-header name="Awards"}}
		<ul id="awards-list">
			{{#each this}}
				<li>
					<header>
						<div class="flex-between">
							<h3>{{title}}</h3>
							<h5>{{date}}</h5>
						</div>
						{{#if awarder}}
							<h4>{{awarder}}</h4>
						{{/if}}
					</header>
					{{#if summary}}
						<p>{{summary}}</p>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</section>
{{/ifwith}}