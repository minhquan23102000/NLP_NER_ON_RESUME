{{#ifwith resume.certificates}}
	<section>
		{{> section-header name="Certificates"}}
		<ul id="certificates-list">
			{{#each this}}
				<li>
					<header>
						<div class="flex-between">
							<h3>{{name}}</h3>
							<h5>{{date}}</h5>
						</div>
						{{#if issuer}}
							<h4>
								{{issuer}}
								{{#if url}}
									<a target="_blank" href="{{url}}">
										<span class="fas fa-fw fa-external-link-alt"></span>
									</a>
								{{/if}}
							</h4>
						{{else if url}}
							<h4><a target="_blank" href="{{url}}">{{url}}</a></h4>
						{{/if}}
					</header>
				</li>
			{{/each}}
		</ul>
	</section>
{{/ifwith}}