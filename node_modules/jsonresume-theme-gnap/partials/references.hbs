{{#if resume.references}}
<section id="references" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.references}}<h2>{{resume.meta.headers.references}}</h2>{{/if}}
    <ul class="row">
    {{#each resume.references}}
    <li class="col s12 m6">
      <blockquote>
        <span>{{reference}}</span>
        {{#if name}}<cite>{{name}}</cite>{{/if}}
      </blockquote>
    </li>
    {{/each}}
    </ul>
  </div>
</section>  
{{/if}}