<section id="basics" class="valign-wrapper">
  <div class="container">
    {{#if resume.basics.summary}}
    <div id="summary">
      {{#if resume.meta.headers.basics}}<h2>{{resume.meta.headers.basics}}</h2>{{/if}}
      <div>{{ resume.basics.summary }}</div>
    </div>
    {{/if}}

    {{#if resume.skills}}
    <div id="skills">
      {{#if resume.meta.headers.skills}}<h2>{{resume.meta.headers.skills}}</h2>{{/if}}
      <ul class="row">
      {{#each resume.skills}}
        <li class="col s12 m4 l3">
          <div class="caption">{{name}}</div>
          <ul>
            {{#each keywords}}
              <li>{{.}}</li>
            {{/each}}
          </ul>      
        </li>
      {{/each}}
      </ul>
    </div>
    {{/if}}

    {{#if resume.languages}}
      <div id="languages">
        {{#if resume.meta.headers.languages}}<h2>{{resume.meta.headers.languages}}</h2>{{/if}}
        <ul class="languages">
        {{#each resume.languages}}
          <li class="language">
            <div>{{language}}</div>
            <div>{{fluency}}</div>
          </li>
        {{/each}}
        </ul>
      </div>
    {{/if}}
  </div>
</section>