{{#if resume.education}}
<section id="education" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.education}}<h2>{{resume.meta.headers.education}}</h2>{{/if}}
    <ul>
    {{#each resume.education}}
      <li>
        <h4>{{institution}}</h4>
        <div class="caption">
          {{#if area}}{{area}} | {{/if}}
          {{#if startDate }}{{formatDate startDate 'MMM YYYY'}}{{/if}} - {{#if endDate}}{{formatDate endDate 'MMM YYYY'}}{{else}}present{{/if}}
        </div>
      </li>
    {{/each}}
    </ul>
  </div>
</section>
{{/if}}