{{#if resume.awards}}
<section id="awards" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.awards}}<h2>{{resume.meta.headers.awards}}</h2>{{/if}}
    <ul>
    {{#each resume.awards}}
      <li>
        <h4>{{title}}</h4>
        <div class="caption">
          {{#if awarder}}{{awarder}} | {{/if}}
          {{#if date }}{{formatDate date 'MMM YYYY'}}{{/if}}
        </div>
        {{#if summary}}<div>{{summary}}</div>{{/if}}
      </li>
    {{/each}}
    </ul>
  </div>
</section>
{{/if}}