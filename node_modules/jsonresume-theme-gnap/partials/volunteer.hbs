{{#if resume.volunteer}}
<section id="volunteer" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.volunteer}}<h2>{{resume.meta.headers.volunteer}}</h2>{{/if}}
    <ul>
      {{#each resume.volunteer}}
      <li>
        <h4>{{summary}}</h4>
        <div class="caption">
          {{#if position }}<span>{{position}}</span> | {{/if}}
          {{#if startDate }}<time datetime="{{startDate}}">{{formatDate startDate 'MMM YYYY'}}</time>{{/if}} - {{#if endDate}}<time datetime="{{endDate}}">{{formatDate endDate 'MMM YYYY'}}</time>{{else}}<time datetime="{{now}}">present</time>{{/if}}
        </div>
        {{#if highlights}}
          <ul>
          {{#each highlights}}
            <li>{{.}}</li>
          {{/each}}
          </ul>
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</section>
{{/if}}