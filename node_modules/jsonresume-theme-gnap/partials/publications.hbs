{{#if resume.publications}}
<section id="publications" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.publications}}<h2>{{resume.meta.headers.publications}}</h2>{{/if}}
    <ul>
    {{#each resume.publications}}
      <li>
        <h4>{{name}}</h4>
        <div class="caption">
          {{#if publisher}}{{publisher}} | {{/if}}
          {{#if releaseDate }}{{formatDate releaseDate 'MMM YYYY'}}{{/if}}
        </div>
        {{#if summary}}<div>{{summary}}</div>{{/if}}
      </li>
    {{/each}}
    </ul>
  </div>
</section>
{{/if}}