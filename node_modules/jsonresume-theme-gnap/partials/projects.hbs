{{#if resume.projects}}
<section id="projects" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.projects}}<h2>{{resume.meta.headers.projects}}</h2>{{/if}}
    <ul class="row">
      {{#each resume.projects}}
      <li class="col s12 m6">
        <h4>{{name}}</h4>
        <div class="caption">
          {{#each roles}}{{#if @first}}{{.}} | {{/if}}{{/each}}
          {{#if startDate }}{{formatDate startDate 'MMM YYYY'}}{{/if}} - {{#if endDate}}{{formatDate endDate 'MMM YYYY'}}{{else}}present{{/if}}
        </div>
        {{#if highlights}}
          <ul>
          {{#each highlights}}
            <li>{{.}}</li>
          {{/each}}
          </ul>
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</section>
{{/if}} 