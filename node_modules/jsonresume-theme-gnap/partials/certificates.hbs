{{#if resume.certificates}}
<section id="certificates" class="valign-wrapper">
  <div class="container">
    {{#if resume.meta.headers.certificates}}<h2>{{resume.meta.headers.certificates}}</h2>{{/if}}
    <ul>
    {{#each resume.certificates}}
      <li>
        <h4>{{name}}</h4>
        <div class="caption">
          {{#if issuer}}{{issuer}} | {{/if}}
          {{#if date }}{{formatDate date 'MMM YYYY'}}{{/if}}
        </div>
      </li>
    {{/each}}
    </ul>
  </div>
</section>
{{/if}}