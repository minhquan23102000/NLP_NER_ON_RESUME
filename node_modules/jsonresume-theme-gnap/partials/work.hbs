{{#if resume.work}}
<section id="work">
  <div class="container" class="valign-wrapper">
    {{#if resume.meta.headers.work}}<h2>{{resume.meta.headers.work}}</h2>{{/if}}
    <ul>
      {{#each resume.work}}
      <li>
        <h4>{{name}}</h4>
        <div class="caption">
          {{#if position }}<span>{{position}}</span> | {{/if}}
          {{#if startDate }}<time datetime="{{startDate}}">{{formatDate startDate 'MMM YYYY'}}</time>{{/if}} - {{#if endDate}}<time datetime="{{endDate}}">{{formatDate endDate 'MMM YYYY'}}</time>{{else}}<time datetime="{{now}}">present</time>{{/if}}
        </div>
        {{#if highlights}}
          <ul>
          {{#each highlights}}
            <li>{{.}}</li>
          {{/each}}
          </ul>
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</section>
{{/if}}