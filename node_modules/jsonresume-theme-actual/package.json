  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "gulp": "^4.0.2",
    "gulp-pug": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "html-validate": "^7.1.1",
    "jest": "^28.1.1",
    "sass": "^1.52.3"
  }
}
